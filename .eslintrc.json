{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals" : {
        "define" : true,
        "describe" : true,
        "it" : true,
        "expect" : true,
        "J" : true,
        "Jaunty" : true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion" : 2017
    },
    "rules": {
        "no-console" : 0,
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [ "error", "single" ],
        "semi": [ 0 ]
        //"indent": [2, 4, {"SwitchCase": 1}]
    }
}
